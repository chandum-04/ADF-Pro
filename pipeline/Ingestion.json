							"text": {
								"value": "SELECT COUNT(*) AS Total_count\r\nFROM @{pipeline().parameters.schema}.@{pipeline().parameters.table}\r\nWHERE last_updated > '@{if(\r\n    empty(pipeline().parameters.backdate),\r\n    activity('last_cdc').output.firstRow.cdc_timestamp,\r\n    pipeline().parameters.backdate\r\n)}'\r\n",
